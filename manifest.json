{
    "name": "FB Messenger Launcher",
    "description": "Launch fb messenger use popup window",
    "version": "1.1.2",
    "permissions": [
        "tabs",
        "https://*/",
        "system.display",
        "webNavigation",
        "tts",
        "commands"
    ],
    "commands": {
        "next-chat": {
            "suggested_key": {
                "default": "Ctrl+Shift+Up"
            },
            "description": "Chat with previous"
        },
        "previous-chat": {
            "suggested_key": {
                "default": "Ctrl+Shift+Down"
            },
            "description": "Chat with next friend"
        },
        "toggle-friend-list": {
            "suggested_key": {
                "default": "Ctrl+Shift+Left"
            },
            "description": "Toggle friend list"
        }
    },
    "icons": {
    	"16": "icon16.png",
    	"48": "icon48.png",
    	"128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.messenger.com/*"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "matches": ["https://www.messenger.com/*"],
        "scripts": ["launcher.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Launch"
    },
    "manifest_version": 2
}
